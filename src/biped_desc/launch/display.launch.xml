<launch>
  <let name="urdf_path" value="$(find-pkg-share biped_desc)/urdf/robo.urdf.xacro"/>
  <let name="rviz_config_path" value="$(find-pkg-share biped_desc)/rviz/config.rviz"/>
  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
  </node>
  <node pkg="rviz2" exec="rviz2" args="-d $(var rviz_config_path)"/>
  <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui" respawn="true"/>
</launch>
